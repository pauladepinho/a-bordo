<%- include("partials/header.ejs", {title: "aBordo - Cadastrar"}) %>
</head>

<body>
  <header>
    <div id="logo">
      <img class="logo" src="../images/airplane.svg" alt="">
      <h1 class="logo">aBordo</h1>
    </div>
  </header>

  <nav>
    <h2>Cadastrar</h2>
    <div class="navbar">
      <ul class="nav">
        <li>
          <a class="nav-link" href="#set-user">
            Dados pessoais
          </a>
        </li>
        <li>
          <a class="nav-link" href="#set-schools">
            Escolas
          </a>
        </li>
        <li>
          <a class="nav-link" href="#set-classes">
            Turmas
          </a>
        </li>
      </ul>
    </div>
  </nav>

  <main id="register-teacher">
    <form id="create" action="/professor/cadastrar" method="POST" enctype="multipart/form-data" autocomplete="on">
      <div data-spy="scroll" data-target=".navbar" data-offset="450">
        <section id="set-user">
          <div class="add-pic">
            <label for="pic-file" class="add-pic">
              <img src="../images/silhouette.jpg" id="user-pic" width="176px" height="176px" />
              <div id="text-on-hover"><span>Nova imagem</span></div>
            </label>
            <input type="file" name="picture" id="pic-file" onchange="addPic()" />
          </div>

          <div id="full-name">
            <input type="text" name="forename" id="name" placeholder="Nome" />

            <input type="text" name="surname" id="surname" placeholder="Sobrenome" />
          </div>
          <div id="contact-info">
            <input type="email" name="email" id="email" placeholder="E-mail" />

            <input type="text" name="phone" id="phone" placeholder="Celular" />
          </div>
          <div id="add-password">
            <div class="password">
              <input type="password" name="password" id="password" placeholder="Senha" />
              <div class="eye-icon" id="eye-icon-1" onclick="toogleVisibility()"></div>
            </div>

            <div class="password">
              <input type="password" name="confirm-password" id="confirm-password" placeholder="Confirme a senha" />
              <div class="eye-icon" id="eye-icon-2" onclick="toogleVisibility()"></div>
            </div>
          </div>
          <ul id="password-strength">
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li class="dash"></li>
            <li>Força da senha</li>
          </ul>
          <ul>
            <li><span>x</span> Minúscula</li>
            <li><span>x</span> Maiúscula</li>
            <li><span>x</span> Número</li>
            <li><span>x</span> Símbolo</li>
            <li><span>x</span> 8 caracteres</li>
          </ul>
        </section>

        <section id="set-schools">
          <div id="new-schools">
            <div class="instances-list schools">
              <button type="button" class="selected school1" onclick="select()">
                Escola 1
              </button>
            </div>
            <button type="button" class="btn-add" id="add-school" onclick="addInstance()">
              +
            </button>
            <button type="button" class="btn-del" id="del-school" onclick="delInstance()" disabled>
              Excluir
            </button>
          </div>
          <div class="gray-box">
            <div class="school-location">
              <select name="" id="">
                <option disabled selected>UF</option>
              </select>

              <select name="" id="">
                <option disabled selected>Município</option>
              </select>
            </div>

            <select name="school[0][name]">
              <option disabled selected>Nome da escola</option>
              <option value="0">Colégio Pedro II</option>
              <option value="1">Escola Técnica Estadual do Ensino Fundamental Visconde de Mauá
              </option>
            </select>

            <select name="school[0][passingGrade]">
              <option disabled selected>Média para aprovação</option>
              <option disabled>Escala de 0 a 10 pontos</option>
              <option value="5">5,0 pontos</option>
              <option value="6">6,0 pontos</option>
              <option value="7">7,0 pontos</option>
              <option disabled>Escala de 0 a 100 pontos</option>
              <option value="50">50 pontos</option>
              <option value="60">60 pontos</option>
              <option value="70">70 pontos</option>
            </select>

            <p>Sistema de avaliação: <span id="term"></span></p>
            <label class="btn-appearance" id="bimonthly" onclick="isBimonthly()">
              Bimestral
              <input type="radio" name="school[0][term-type]" />
            </label>
            <label class="btn-appearance" id="trimonthly" onclick="isTrimonthly()">
              Trimestral
              <input type="radio" name="school[0][term-type]" />
            </label>
          </div>
        </section>

        <section id="set-classes">
          <div id="new-classes">
            <div class="instances-list schools">
              <button type="button" class="selected school1" onclick="select()">
                Escola 1
              </button>
            </div>
            <br />
            <div class="instances-list classes">
              <button type="button" class="selected" id="class0" onclick="select()">
                Turma 1
              </button>
            </div>
            <button type="button" class="btn-add" id="add-classes" onclick="addInstance()">
              +
            </button>
            <button type="button" id="del-class" onclick="delInstance()" disabled>
              Excluir
            </button>
          </div>

          <div class="gray-box">
            <div id="class-code">
              <label for="class">Turma</label>
              <input type="text" name="class" id="class" placeholder="Número da turma" />
            </div>

            <p>Nesta turma, eu leciono...</p>
            <div id="new-courses">
              <select id="course1" name="course1">
                <option value="" disabled selected>Escolher disciplina</option>
                <option value="arts">Artes</option>
                <option value="biology">Biologia</option>
                <option value="sciences">Ciências</option>
                <option value="phys-ed">Educação Física</option>
                <option value="philosophy">Filosofia</option>
                <option value="physics">Física</option>
                <option value="geography">Geografia</option>
                <option value="geomethy">Geometria</option>
                <option value="history">História</option>
                <option value="literature">Literatura</option>
                <option value="math">Matemática</option>
                <option value="music">Música</option>
                <option value="spanish-lang">Língua Espanhola</option>
                <option value="french-lang">Língua Francesa</option>
                <option value="english-lang">Língua Inglesa</option>
                <option value="portuguese-lang">Língua Portuguesa</option>
                <option value="chemistry">Química</option>
                <option value="writing">Redação</option>
                <option value="sociology">Sociologia</option>
                <option value="drama">Teatro</option>
              </select>

              <div class="buttons">
                <button type="button" class="btn-add" id="add-course">+</button>
                <button type="button" class="btn-del" id="del-course" disabled>
                  -
                </button>
              </div>
            </div>

            <div id="students-list">
              <div>
                <span id="student-number">Nº</span><span id="student-name">Aluno</span>
              </div>

              <div class="students" id="student1">
                <input type="number" name="class-id-student1" id="class-id-student1" value="1" />
                <input type="text" name="name-student1" id="name-student1" placeholder="Nome do aluno" />

                <label for="course-retake-checkbox-student1" class="checkbox-container">Dependência
                  <input type="checkbox" name="course-retake-checkbox-student1" class="course-retake-checkbox"
                    id="course-retake-checkbox-student1" data-div-id="course-retake-student1" />
                  <span class="checkmark"></span>
                </label>

                <div class="course-retake-list" id="course-retake-student1" hidden>
                  <select name="course-retake-list1-student1" id="course-retake-list1-student1">
                    <option value="" disabled selected>Dependência em...</option>
                    <option value="arts">Artes</option>
                    <option value="biology">Biologia</option>
                    <option value="sciences">Ciências</option>
                    <option value="phys-ed">Educação Física</option>
                    <option value="philosophy">Filosofia</option>
                    <option value="physics">Física</option>
                    <option value="geography">Geografia</option>
                    <option value="geomethy">Geometria</option>
                    <option value="history">História</option>
                    <option value="literature">Literatura</option>
                    <option value="math">Matemática</option>
                    <option value="music">Música</option>
                    <option value="spanish-lang">Língua Espanhola</option>
                    <option value="french-lang">Língua Francesa</option>
                    <option value="english-lang">Língua Inglesa</option>
                    <option value="portuguese-lang">Língua Portuguesa</option>
                    <option value="chemistry">Química</option>
                    <option value="writing">Redação</option>
                    <option value="sociology">Sociologia</option>
                    <option value="drama">Teatro</option>
                  </select>

                  <button type="button" class="btn-add">+</button>
                  <button type="button" class="btn-del" disabled>
                    -
                  </button>
                </div>
              </div>

              <div class="students" id="student2">
                <input type="number" name="class-id-student2" id="class-id-student2" value="2" />
                <input type="text" name="name-student2" id="name-student2" placeholder="Nome do aluno" />

                <label for="course-retake-checkbox-student2" class="checkbox-container">Dependência
                  <input type="checkbox" name="course-retake-checkbox-student2" class="course-retake-checkbox"
                    id="course-retake-checkbox-student2" data-div-id="course-retake-student2" />
                  <span class="checkmark"></span>
                </label>

                <div class="course-retake-list" id="course-retake-student2" hidden>
                  <select name="course-retake-list1-student2" id="course-retake-list1-student2">
                    <option value="" disabled selected>Dependência em...</option>
                    <option value="arts">Artes</option>
                    <option value="biology">Biologia</option>
                    <option value="sciences">Ciências</option>
                    <option value="phys-ed">Educação Física</option>
                    <option value="philosophy">Filosofia</option>
                    <option value="physics">Física</option>
                    <option value="geography">Geografia</option>
                    <option value="geomethy">Geometria</option>
                    <option value="history">História</option>
                    <option value="literature">Literatura</option>
                    <option value="math">Matemática</option>
                    <option value="music">Música</option>
                    <option value="spanish-lang">Língua Espanhola</option>
                    <option value="french-lang">Língua Francesa</option>
                    <option value="english-lang">Língua Inglesa</option>
                    <option value="portuguese-lang">Língua Portuguesa</option>
                    <option value="chemistry">Química</option>
                    <option value="writing">Redação</option>
                    <option value="sociology">Sociologia</option>
                    <option value="drama">Teatro</option>
                  </select>

                  <button type="button" class="btn-add">+</button>
                  <button type="button" class="btn-del" disabled>
                    -
                  </button>
                </div>
              </div>

            </div>
          </div>

          <button type="submit" class="special">Finalizar e levantar voo!</button>
        </section>
      </div>
    </form>
  </main>

  <%- include("partials/footer.ejs") %>